<comment>
problem = spherical blast wave

<job>
problem_id = 2021
pgen = blast

<parthenon/mesh>
refinement = adaptive
numlevel = 2

nx1 = 256 
x1min = -0.5
x1max = 0.5
ix1_bc = periodic
ox1_bc = periodic

nx2 = 256 
x2min = -0.5
x2max = 0.5
ix2_bc = periodic
ox2_bc = periodic

nx3 = 1
x3min = -0.5
x3max = 0.5
ix3_bc = periodic
ox3_bc = periodic

num_threads=1
num_streams=1

<parthenon/meshblock>
nx1=16  
nx2=16  
nx3=1 

<parthenon/time>
integrator = vl2
cfl = 0.3
tlim = 0.004
nlim = 10000
perf_cycle_offset = 2 # number of inital cycles not to be included in perf calc

<hydro>
eos = adiabatic
riemann = hlle
reconstruction = plm
gamma = 1.666666666666667 # gamma = C_p/C_v
use_scratch = false
scratch_level = 1 # 0 is actual scratch (tiny); 1 is HBM

<problem>
pamb       = 0.001    # ambient pressure
prat       = 1.6e8 # Pressure ratio initially
radius     = 0.05    # Radius of the inner sphere
damb       = 1.0    # ambient density
drat       = 2.0
ramp       = 0.0
thr        = 0.1
input_image = 2021.pbm

<parthenon/output0>
file_type = hdf5
dt = 0.00005
variables = cons
